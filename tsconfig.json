{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/mocha-framework"
    ],
    "paths": {
      "test/*": ["./test/*"]
    }
  },
  "include": [
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
